@model App.Models.DataModels.movies
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/Common.js"></script>
<script src="~/lib/jquery/dist/jquery.easing.1.3.js"></script>
<script src="~/lib/jquery/dist/jquery.touchSwipe.js"></script>
<script src="~/js/movie.js"></script>
  <link href="~/css/site.css" rel="stylesheet" />

  <div class="modal fade" id="MovieaddMsg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-sm" role="document" >
            <nav class="navbar navbar-default navbar-custom" style="margin-bottom: 0">
        <div class="container-fluid">
            <div>
                <a class="navbar-brand" href="#" style="margin-top: -5px">
                    <img src=@Url.Content("~/Images/logo.png") width="77" height="34" />
                </a>
            </div>
        </div>
             </nav></div>
        </div>
  
   <form  id="movie_form" enctype="multipart/form-data">

        <div class="modal-header" style="text-align: center; background-color: #7a7a7a;color:white;">
            <h2 class="modal-title">Add Movie</h2>
        </div>
        <div class="modal-body" style="height: 300px">
            <div class="col-md-7 col-lg-7 col-sm-7 col-xs-7">
                <div class="register-form">

                    <div class="form-group">

                        @Html.TextBoxFor(p => p.Title, new { @maxlength = "50", @class = "form-control", @placeholder = "Title" })
                        <div class="error-message" id="errorMessage">@Html.ValidationMessageFor(p => p.Title)</div>
                    </div>
                    <div class="form-group">

                        @Html.TextBoxFor(p => p.Director, new { @maxlength = "50", @class = "form-control", @placeholder = "Director" })
                        <div class="error-message" id="errorMessage">@Html.ValidationMessageFor(p => p.Director)</div>
                    </div>
                    <div class="form-group">

                        @Html.TextBoxFor(p => p.ReleaseYear, new { @maxlength = "4", @class = "form-control", @placeholder = "Release Year" })
                        <div class="error-message" id="errorMessage">@Html.ValidationMessageFor(p => p.ReleaseYear)</div>
                    </div>
                   <div class="form-group">

                        @Html.TextBoxFor(p => p.Length, new { @maxlength = "4", @class = "form-control", @placeholder = "Length" })
                        <div class="error-message" id="errorMessage">@Html.ValidationMessageFor(p => p.Length)</div>
                    </div>
                  
                    <div class="form-group" style="height: 34px">
                        <label class="checkbox-inline">
                            <input type="checkbox" value="">Enabled</label>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="">Featured</label>
                    </div>
                </div>
            </div>
            <div class="col-md-5 col-lg-5 col-sm-5 col-xs-5">
                <div class="form-group file-avatar edit-poster">
                    
                    <div style="display: inline;">
                    <input asp-for="PosterContent" type="file" value="Choose Poster" class="form-group" />
                        <span>Choose an Image to the movie poster.</span>
                    </div>
                </div>

            </div>


        </div>
        <div class="modal-footer">
            <input type="submit" value="Add Movie" onclick="submitMovie()"/>
            @*<button type="submit" class="btn btn-default btn-burgandy" onclick="submitStudent()">Add Movie</button>*@
        </div>

    </form>
 <script src="~/js/addmovie.js" type = "text/javascript">
 

</script>