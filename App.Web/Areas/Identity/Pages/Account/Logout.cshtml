@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}
<link rel="stylesheet" href="~/css/site.css" />
<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Identity/Account/Login")" method="post">
                <button type="submit" class="btn btn-default btn-burgandy">Click here to Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
